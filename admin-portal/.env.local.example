# The Bazaar - Admin Portal example env
# Copy to .env.local and fill values. DO NOT commit real secrets.

VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key
# Admin portal requires server-side service role for elevated ops. Do NOT expose in client.
VITE_SUPABASE_SERVICE_ROLE_KEY=SERVICE_ROLE_KEY_PLACEHOLDER  # server-only

# Admin-specific
VITE_ADMIN_PORTAL_SECRET=replace-with-random-secret
VITE_ADMIN_ALLOWED_IPS=127.0.0.1,::1
VITE_ADMIN_ALLOWED_DOMAINS=localhost,admin.thebazaar.local
